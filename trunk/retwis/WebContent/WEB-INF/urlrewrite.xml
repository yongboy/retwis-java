<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 2.6//EN"  
        "http://tuckey.org/res/dtds/urlrewrite2.6.dtd">
<urlrewrite>
	<rule>
		<from>^/([a-zA-Z0-9]+)/mentions</from>
		<to>/mentions?user=$1</to>
	</rule>
	<rule>
		<from>^/([a-zA-Z0-9]+)/follow/([a-zA-Z0-9]+)$</from>
		<to>/follow?curr=$1&amp;target=$2</to>
	</rule>
	<rule>
		<from>^/([a-zA-Z0-9]+)/unfollow/([a-zA-Z0-9]+)$</from>
		<to>/unfollow?curr=$1&amp;target=$2</to>
	</rule>
	<rule>
		<from>^/([a-zA-Z0-9]+)/$</from>
		<to>/posts?name=$1</to>
	</rule>
</urlrewrite>